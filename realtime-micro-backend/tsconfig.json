{
  "compilerOptions": {
    "target": "ES2020",                 // or at least "ES2017"
    "module": "NodeNext",               // or "ESNext" / "Node16"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
