{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "typeRoots": ["node_modules/@types", "src/types"],  
      "types": ["node", "express"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  